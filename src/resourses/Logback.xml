<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/myapp-error.log</file>
        <append>true</append>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="ERROR">
        <appender-ref ref="FILE" />
    </root>
    
    <!-- Añadir esta sección para configurar el nivel de log específico para org.apache.fontbox -->
    <logger name="org.apache.fontbox" level="ERROR"/>
    <!-- Añade configuraciones similares para otros paquetes si es necesario -->

</configuration>


