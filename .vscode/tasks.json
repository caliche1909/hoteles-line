{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "copyResources",
            "type": "shell",
            "windows": {
                "command": "Copy-Item 'config.properties' -Destination 'build/classes/config.properties' -Force; Copy-Item -Path 'src/img' -Destination 'build/classes/' -Recurse -Force; Copy-Item -Path 'src/resourses' -Destination 'build/classes/' -Recurse -Force -ErrorAction SilentlyContinue"
            },
            "linux": {
                "command": "cp config.properties build/classes/config.properties; cp -r src/img build/classes/; cp -r src/resourses build/classes/ 2>/dev/null || true"
            },
            "osx": {
                "command": "cp config.properties build/classes/config.properties; cp -r src/img build/classes/; cp -r src/resourses build/classes/ 2>/dev/null || true"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ]
}
